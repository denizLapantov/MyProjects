
@model IEnumerable<FClubBarcelona.Models.ViewModels.Video.VideoVm>

<div class="container">
    <div class="col-lg-12">
        <h2 class="my-4 text-center" style="font-family: monospace">Videos</h2>
    </div>
    <div class="row">
        @foreach (var video in Model)
        {
            <div class="col-xs-6 .col-sm-4">
                <iframe style="width: 100%" height="315" src=@Html.DisplayFor(x => video.VideoUrl) allowfullscreen></iframe>
                @Html.DisplayFor(x => video.Duration)
                <h4>@Html.DisplayFor(x => video.Title)</h4>
                <br/>
            </div>
        }
    </div>
    <p><br><a href="http://validator.w3.org/check?uri=http%3A%2F%2Fbootsnipp.com%2Fiframe%2FOPM0j" target="_blank"></a>
    </p>
    <div class="text-center">@Html.ActionLink("Back to Home", "Index", "Home", null, new {@class = "btn btn-default"})</div>
</div>
