@model IEnumerable<FClubBarcelona.Models.ViewModels.Galery.GaleryViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Pictures</h2>

<p>
    @Html.ActionLink("Create New", "AddPicture")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ImageTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ImageTitle)
        </td>
        <td>
            <img class="img-responsive" width="200" height="200" src=@Html.DisplayFor(x => item.ImageUrl) alt="" />
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPicture", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeletePicture", new { id=item.Id })
        </td>
    </tr>
}

</table>
