<div class="container">
    <div class="row text-center">     
        <br/>
        @{
            var Files = (ViewBag.Files as string[]);
            if (Files != null && Files.Any())
            {
                foreach (var file in Files)
                {
                    <div class="col-md-4">
                        <img class="" src="/Content/MyTemplete/Download/Photos/@file" width ="300" height="300" alt="barca">

                        @Html.ActionLink("Download", "DownloadFile", new { fileName = file }, new {@class = "btn btn-default"})
                    </div>
                }
            }
            else
            {
                <label>No File(s) to Download</label>
            }
        }
    </div>
    <div class="text-center">@Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "btn btn-default" })</div>
</div>