@model IEnumerable<FClubBarcelona.Models.ViewModels.Coaches.AllCoachesVm>

<div class="container">

    <div class="row">
        <div class="col-lg-12">
            <br />
            <h2 class="my-4 text-center" style="font-family: monospace">Our Coaches</h2>
            <br/>
        </div>

        @foreach (var coach in Model)
        {
            <div class="col-lg-4 col-sm-6 text-center mb-4">
                <img src=@Html.DisplayFor(x=>coach.ImageUrl) class="img-rounded" alt="Cinque Terre" width="304" height="236">
                <h3 style="font-family: monospace">
                    @Html.ActionLink(Html.DisplayFor(x => coach.FirstName) + " " + Html.DisplayFor(x => coach.LastName).ToString(), "CoachesDetails", new { lastName = coach.LastName })
                </h3>

            </div>
        }
    </div>
    <div class="text-center">@Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "btn btn-default" })</div>
</div>