<!DOCTYPE html>

<html>
<head>
    <link href="https://media-static.fcbarcelona.com/fcb_theme/images/favicon.ico" rel="Shortcut Icon">
    <title>FcBarcelona</title>
    <link href="@Url.Content("/Content/MyTemplete/")css/bootstrap.css" rel='stylesheet' type='text/css'/>
    <link href="@Url.Content("/Content/MyTemplete/")css/swipebox.css" rel='stylesheet' type='text/css'/>
    <link href="@Url.Content("/Content/MyTemplete/")css/Site.css" rel='stylesheet' type='text/css' />

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="../../Content/MyTemplete/js/jquery.min.js"></script>
    <!-- Custom Theme files -->
    <link href="@Url.Content("/Content/MyTemplete/")css/style.css" rel="stylesheet" type="text/css" media="all"/>
    <!-- Custom Theme files -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="keywords" content="RANGERS Responsive web template, Bootstrap Web Templates, Flat Web Templates, Andriod Compatible web template,
Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyErricsson, Motorola web design"/>
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!--webfont-->
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
</head>
<body>
<div class="header">
    <div class="top-menu">       
        <ul>           
            <li class="navbar-left"><a href=@Url.Action("Index", "Home")><img src="../../Content/MyTemplete/images/fc_barcelona.png" alt="" @*width="50"*@  border="0"  height="50" /></a></li>
            <li>@Html.ActionLink("Home", "Index", "Home", new {Area = ""}, null) </li>
            <li>@Html.ActionLink("Our Team", "Players", "Home", new {Area = ""}, null)</li>
            <li>@Html.ActionLink("Articles", "Articles", "Home", new {Area = ""}, null)</li>
            <li>@Html.ActionLink("Photos", "Galery", "Home", new {Area = ""}, null)</li>
            <li>@Html.ActionLink("Video", "Video", "Home", new {Area = ""}, null)</li>
            <li>@Html.ActionLink("Download", "Download", "Home", new {Area = ""}, null)</li>
            <li>@Html.ActionLink("Coaches", "Coaches", "Home", new {Area = ""}, null)</li>
            <li>@Html.ActionLink("History", "History", "Home", new {Area = ""}, null)</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home", new {Area = ""}, null)</li>
            <li>@Html.ActionLink("Live Chat", "Chat", "ChatRoom", new { Area = "" }, null)</li>
            @if (User.IsInRole("Admin"))
            {
                <li>@Html.ActionLink("Admin", "Home", "Admin", new {Area = "Admin"}, null)</li>
            }
            @if (User.IsInRole("BlogAuthor"))
            {
                <li>@Html.ActionLink("Blog", "Home", "Blog", new {Area = "Blog"}, null)</li>
            }
            @Html.Partial("_LoginPartial")
            @*</nav>*@
        </ul>
    </div>
</div>

<style>
    body {
        background-color: papayawhip;
    }
    .dropdown-content {
        display: none;
        position: absolute;
        /*background-color: #f9f9f9;*/
        min-width: 160px;
        /*box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);*/
        z-index: 1;
    }

        .dropdown-content a {
            color: black;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
        }


    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        background-color: #3e8e41;
    }

    .navbar-left {
        top: -15px;
        position: relative;
    }
</style>
@RenderBody()
<hr/>
<div class="footer">
    <div class="container">
        <div class="row">
            @if (ViewContext.RouteData.Values["action"].ToString() == "Index")
            {
                @Html.Partial("_SendMessage")
            }
            else
            {
                <div class="col-md-6 follow-us text-center">
                    <h4>Follow Us</h4>
                    <div class="social-icons">
                        <a href="https://www.facebook.com/fcbarcelona/?fref=ts"><i class="facebook"></i></a>
                        <a href="https://twitter.com/FCBarcelona?ref_src=twsrc%5Egoogle%7Ctwcamp%5Eserp%7Ctwgr%5Eauthor"><i class="twitter"></i></a>
                        <a href="https://www.pinterest.com/fcbarcelona/"><i class="pinterest"></i></a>
                        <a href="https://plus.google.com/+FCBarcelona"><i class="googlepluse"></i></a>
                    </div>
                    <p><strong>&copy; @DateTime.Now.Year - Fc Barcelona</strong></p>
                </div>
                <div class="col-md-6 follow-us text-center">
                    <a href="/" class="">
                        <img class="" src="https://media-public.fcbarcelona.com/20157/28952/198639/1.1/198639.png?t=1446107699000" alt="FC Barcelona" title="FC Barcelona" width="400", height="100">
                    </a>
                    <p class="">
                        <span class="">
                            <strong>Agreement between FC Barcelona and UNICEF</strong>
                        </span>
                        <a class="" href="https://foundation.fcbarcelona.com/?_ga=1.11436914.778419911.1492170999" target="_blank">
                            <img class="" data-src="https://media-public.fcbarcelona.com/20157/13077772/450020/1.1/450020.png?t=1460467885000" alt="Agreement between FC Barcelona and UNICEF" src="https://media-public.fcbarcelona.com/20157/13077772/450020/1.1/450020.png?t=1460467885000">
                        </a>
                    </p>
                </div>
            }
        </div>
    </div>
</div>
<!-- footer-section-ends -->

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
